= form_for @alert, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :entidad, :class => 'control-label'
    .controls
      = f.select :entidad, options_for_select(@entidades), prompt: 'Cualquier Entidad' , :class => 'text_field'
  .control-group
    = f.label :descripcion, :class => 'control-label'
    .controls
      = f.text_field :descripcion,:class => 'text_field'
  .control-group
    = f.label :precio_min, :class => 'control-label'
    .controls
      = f.number_field :precio_min, value: 0, :class => 'number_field'
  .control-group
    = f.label :precio_max, :class => 'control-label'
    .controls
      = f.number_field :precio_max, value: 999999999, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), alerts_path, :class => 'btn'
