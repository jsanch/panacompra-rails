- model_class = Alert
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:entidad) + ':'
  %br
  = @alert.entidad
%p
  %strong= model_class.human_attribute_name(:descripcion) + ':'
  %br
  = @alert.descripcion
%p
  %strong= model_class.human_attribute_name(:precio_min) + ':'
  %br
  = @alert.precio_min
%p
  %strong= model_class.human_attribute_name(:precio_max) + ':'
  %br
  = @alert.precio_max

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), alerts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_alert_path(@alert), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), alert_path(@alert), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
