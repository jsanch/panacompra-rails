- model_class = Compra
= content_for :main do
  .hero-unit.add-padding-fixed
    .page-header
      = render "shared/search", link: compras_path

  



%table.table.table-hover.table-condensed
  - if not params[:query]
    %caption 
      %h1 Ãšltimas Licitaciones
      %hr
  %thead
    %tr
      %th= model_class.human_attribute_name(:entidad)
      %th= model_class.human_attribute_name(:precio)
      %th= model_class.human_attribute_name(:proponente)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:correo_contacto)
      %th= model_class.human_attribute_name(:fecha)
      %th
  %tbody
    - @compras.each do |compra|
      %tr
        %td= compra.entidad.titleize.html_safe
        %td= number_to_currency(compra.precio)
        %td= compra.proponente.titleize.html_safe if compra.proponente != 'empty'
        %td= compra.description.humanize.html_safe
        %td= compra.correo_contacto
        %td= compra.fecha.strftime('%d/%m/%y')
        %td= link_to 'Detalle', compra, class: 'btn btn-small btn-primary'

= will_paginate @compras
