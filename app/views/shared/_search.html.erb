<%= form_tag link, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= number_field_tag :price_min, params[:price_min], placeholder: 'Precio Minimo' %>
    <%= number_field_tag :price_max, params[:price_max], placeholder: 'Precio Maximo' %>
    <%= submit_tag "Search", name: nil %>
<% end %>
